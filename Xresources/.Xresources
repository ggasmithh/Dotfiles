! Looks
URxvt.font: xft:Source Code Pro:size=12
URxvt.internalBorder: 75
URxvt.scrollBar: false

! Performance
URxvt*skipBuiltinGlyphs: true
URxvt.perl-ext: eval
URxvt.perl-ext-common: eval

!Functionality
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! DPI/Font
Xft.dpi: 96
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.rgba: none
Xft.lcdfilter: lcddefault

! Colors
*.foreground:  	FOREGROUND
*.background:  	BACKGROUND
*.cursorColor: 	FOREGROUND
*.color0:      	COLOR0
*.color8:      	COLOR8
*.color1:	COLOR1
*.color9:	COLOR9
*.color2:	COLOR2
*.color10:	COLOR10
*.color3:	COLOR3
*.color11:	COLOR11
*.color4:	COLOR4
*.color12:	COLOR12
*.color5:	COLOR5
*.color13:	COLOR13
*.color6:	COLOR6
*.color14:	COLOR14
*.color7:	COLOR7
*.color15:	COLOR15

! Rofi
rofi.color-window: BACKGROUND, BACKGROUND, BACKGROUND
rofi.color-normal: BACKGROUND, FOREGROUND, BACKGROUND, BACKGROUND, COLOR1
rofi.color-active: BACKGROUND, FOREGROUND, BACKGROUND, BACKGROUND, COLOR1
rofi.color-urgent: BACKGROUND, FOREGROUND, BACKGROUND, BACKGROUND, COLOR1

